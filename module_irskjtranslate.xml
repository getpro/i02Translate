<?xml version="1.0" encoding="UTF-8"?>
<project name="module_irskjtranslate" default="compile.module.irskjtranslate">
  <dirname property="module.irskjtranslate.basedir" file="${ant.file.module_irskjtranslate}"/>
  
  <property name="module.jdk.home.irskjtranslate" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.irskjtranslate" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.irskjtranslate" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.irskjtranslate" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="irskjtranslate.output.dir" value="${module.irskjtranslate.basedir}/out/production/IrskjTranslate"/>
  <property name="irskjtranslate.testoutput.dir" value="${module.irskjtranslate.basedir}/out/test/IrskjTranslate"/>
  
  <path id="irskjtranslate.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="irskjtranslate.module.production.classpath">
    <path refid="${module.jdk.classpath.irskjtranslate}"/>
  </path>
  
  <path id="irskjtranslate.runtime.production.module.classpath">
    <pathelement location="${irskjtranslate.output.dir}"/>
  </path>
  
  <path id="irskjtranslate.module.classpath">
    <path refid="${module.jdk.classpath.irskjtranslate}"/>
    <pathelement location="${irskjtranslate.output.dir}"/>
  </path>
  
  <path id="irskjtranslate.runtime.module.classpath">
    <pathelement location="${irskjtranslate.testoutput.dir}"/>
    <pathelement location="${irskjtranslate.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.irskjtranslate">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.irskjtranslate">
    <patternset refid="excluded.from.module.irskjtranslate"/>
  </patternset>
  
  <path id="irskjtranslate.module.sourcepath">
    <dirset dir="${module.irskjtranslate.basedir}">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.irskjtranslate" depends="compile.module.irskjtranslate.production,compile.module.irskjtranslate.tests" description="Compile module IrskjTranslate"/>
  
  <target name="compile.module.irskjtranslate.production" depends="register.custom.compilers" description="Compile module IrskjTranslate; production classes">
    <mkdir dir="${irskjtranslate.output.dir}"/>
    <javac2 destdir="${irskjtranslate.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.irskjtranslate}/javac">
      <compilerarg line="${compiler.args.irskjtranslate}"/>
      <bootclasspath refid="irskjtranslate.module.bootclasspath"/>
      <classpath refid="irskjtranslate.module.production.classpath"/>
      <src refid="irskjtranslate.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.irskjtranslate"/>
    </javac2>
    
    <copy todir="${irskjtranslate.output.dir}">
      <fileset dir="${module.irskjtranslate.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.irskjtranslate.basedir}/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.irskjtranslate.tests" depends="register.custom.compilers,compile.module.irskjtranslate.production" description="compile module IrskjTranslate; test classes" unless="skip.tests"/>
  
  <target name="clean.module.irskjtranslate" description="cleanup module">
    <delete dir="${irskjtranslate.output.dir}"/>
    <delete dir="${irskjtranslate.testoutput.dir}"/>
  </target>
  
  <property name="irskjtranslate.plugin.path.jar" value="${module.irskjtranslate.basedir}/IrskjTranslate.jar"/>
  
  <!-- Build archive for plugin 'IrskjTranslate' -->
  <target name="plugin.build.jar.irskjtranslate" depends="compile.module.irskjtranslate" description="Build plugin archive for module &#39;IrskjTranslate&#39;">
    <jar destfile="${irskjtranslate.plugin.path.jar}" duplicate="preserve">
      <zipfileset dir="${module.irskjtranslate.basedir}/out/production/IrskjTranslate"/>
      <zipfileset file="${module.irskjtranslate.basedir}/resources/META-INF/plugin.xml" prefix="META-INF"/>
      <manifest>
        <attribute name="Created-By" value="IntelliJ IDEA"/>
        <attribute name="Manifest-Version" value="1.0"/>
      </manifest>
    </jar>
  </target>
</project>